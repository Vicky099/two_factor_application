<div class="panel-group">
	<div class="panel panel-default">
		<div class="panel-heading"><b>Verify Two Factor Authentication channel</b></div>
		<div class="panel-body">
			<%= form_tag(activate_factor_users_path, method: :put) do %>
				<%= hidden_field_tag :f_id, @f_id %>
				<% if !current_user.app_push? %>
					<div class="form-group row">
						<%= label_tag "Enter Token", nil, class: "col-sm-2 col-form-label" %>
						<div class="col-sm-10">
							<%= text_field_tag 'token', nil, class: "form-control", required: true %>
						</div>
					</div>
					<% if current_user.app_token? %>
					<div class="form-group row">
						<div class="col-sm-2"></div>
						<div class="col-sm-10">
							Please scan the barcode and setup OKTA Verify Application. Once done with application installation click on App and enter token to activate.<br><br>
							<%= image_tag "#{@barcode}", style: 'height:15vw;width:15vw;margin-bottom:20px;' %>		
						</div>
					</div>
					<% end %>
					<div>
						<%= submit_tag "Verify", class: 'btn btn-sm btn-success' %>
					</div>
				<% end %>
				<% if current_user.app_push? %>
					Please scan the barcode and setup OKTA Verify Application. Once done with application installation click on done.<br><br>
					<%= image_tag "#{@barcode}", style: 'height:15vw;width:15vw;margin-bottom:20px;' %>
					<div>
						<%= submit_tag "Done", class: 'btn btn-sm btn-success' %>
					</div>
				<% end %>					
			<% end %>
		</div>
	</div>
</div>