<div class="panel-group">
	<div class="panel panel-default">
		<div class="panel-heading"><b>Settings</b></div>
		<div class="panel-body">
			<%= form_for current_user, url: user_path, method: :put do |f| %>
				<div class="form-group row">
					<%= f.label :name, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.text_field :name, class: "form-control" %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :email, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.email_field :email, class: "form-control", readonly: 'readonly' %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :country_code, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.text_field :country_code, class: "form-control" , readonly: 'readonly'%>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :mob_no, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.text_field :mob_no, class: "form-control" , readonly: 'readonly'%>
					</div>
				</div>

				<div class="form-group">
					<%= f.submit 'Update', class: "btn btn-sm btn-success"%>
				</div>

			<% end %>
		</div>
	</div>
</div>

<div class="panel-group">
	<div class="panel panel-default">
		<div class="panel-heading"><b>Two Factor Authentication</b></div>
		<div class="panel-body">
			<%= form_for @two_factor_method, url: update_two_factor_users_path, method: :put do |ff| %>
				<div class="form-group row">
					<%= ff.label :name, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">						
						<%= ff.select :name, options_for_select(TwoFactorMethod.names.keys, selected: @two_factor_method.name), {}, { :class => 'form-control' } %>
					</div>
				</div>

				<div class="form-group row">
					<%= ff.label :channel, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= ff.select :channel, options_for_select(TwoFactorMethod.channels.keys, selected: @two_factor_method.channel), {}, { :class => 'form-control' } %>
					</div>
				</div>
				<div class="form-group">
					<%= ff.submit 'Activate Two Factor', class: "btn btn-sm btn-success"%>
				</div>

			<% end %>
		</div>
	</div>
</div>