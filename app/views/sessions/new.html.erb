<div class="panel-group">
	<div class="panel panel-default">
		<div class="panel-heading"><b>Sign In</b></div>
		<div class="panel-body">
			<%= form_tag(login_sessions_path, method: :post) do %>
				<div class="form-group row">
					<%= label_tag "Email", nil, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= email_field_tag 'user[email]', nil, class: "form-control" %>
					</div>
				</div>

				<div class="form-group row">
					<%= label_tag "Password", nil, class: "col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= password_field_tag 'user[password]', nil, class: "form-control" %>
					</div>
				</div>

				<div>
					<%= submit_tag "Log In", class: 'btn btn-sm btn-success', data: { "loading-text" => "wait ..."} %>
					<%= link_to "Sign Up", new_user_path, class: 'btn btn-sm btn-primary' %>
				</div>
			<% end %>
		</div>
	</div>
</div>
